- content_for(:html_title) {'会員情報入力'}
/= render partial: 'signup-header1'
.signup-container
  %h2.signup-header 会員情報入力
  .registration-form

    = form_for @user, url: registration_signup_index_path,method: :post do |f|
      .signup-form-container.registration-form__first-container
        .signup-form-container__title
          = label :nickname, 'ニックネーム', class: 'signup-label'
        = f.text_field :nickname, placeholder: '例）メルカリ太郎'
      .signup-form-container
        .signup-form-container__title
          = label :email, 'メールアドレス'
        = f.text_field :email, placeholder: 'PC・携帯どちらでも可'
      .signup-form-container
        .signup-form-container__title
          = label :password, 'パスワード'
        = f.password_field :password,placeholder: '７文字以上'
      .signup-form-container
        .signup-form-container__title
          = label :password_confirmation, 'パスワード（確認）'
        = f.password_field :password_confirmation, placeholder: '7文字以上'

      //今回はprofileにも同時に値を送りたいのでfields_forを使っています。
      = fields_for @profile,url: registration_signup_index_path,method: :post do |p|
        .signup-form-container
          .signup-form-container__title
            = label :name, 'お名前(全角)', class: 'signup-label'
          .signup-form-container__name
            = p.text_field :family_name, placeholder: '例）山田'
            = p.text_field :personal_name, placeholder: '例）彩'
          .signup-form-container__name
            = p.text_field :family_name_kana, placeholder: '例）ヤマダ'
            = p.text_field :personal_name_kana, placeholder: '例）アヤ'  
        .l-regist-wholeform__mainform__input__info__birthday
          = p.label :birthday, "生年月日"
          %span.form-require 必須
          %br/
          .l-regist-wholeform__mainform__input__info__birthday__select
            .l-regist-wholeform__mainform__input__info__birthday__select__year
              = p.select :birthyear,[["--", ""],
                                ["2012", 2012],
                                ["2011", 2011],
                                ["2010", 2010],
                                ["2009", 2009],
                                ["2008", 2008],
                                ["2007", 2007],
                                ["2006", 2006],
                                ["2005", 2005],
                                ["2004", 2004],
                                ["2003", 2003],
                                ["2002", 2002],
                                ["2001", 2001],
                                ["2000", 2000],
